{% set id = 'expensiveTable' %}

{% set content %}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">{{ 1 + page*3 }}</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
            </tr>
            <tr>
                <th scope="row">{{ 2 + page*3 }}</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
            </tr>
            <tr>
                <th scope="row">{{ 3 + page*3 }}</th>
                <td colspan="2">Larry the Bird</td>
                <td>@twitter</td>
            </tr>
            </tbody>
        </table>

    <nav aria-label="...">
        <ul class="pagination">
            <li class="page-item{% if page <= 0 %} disabled{% endif %}">
                <a class="page-link" href="{{ path('table.index',{"page": page - 1}) }}">Previous</a>
            </li>
            <li class="page-item {% if page == 0 %}active{% endif %}"><a class="page-link" href="{{ path('table.index',{"page": 0}) }}">1</a></li>
            <li class="page-item {% if page == 1 %}active{% endif %}"><a class="page-link" href="{{ path('table.index',{"page": 1}) }}">2</a></li>
            <li class="page-item {% if page == 2 %}active{% endif %}"><a class="page-link" href="{{ path('table.index',{"page": 2}) }}">3</a></li>
            <li class="page-item{% if page >= 2 %} disabled{% endif %}">
                <a class="page-link" href="{{ path('table.index',{"page": page + 1}) }}">Next</a>
            </li>
        </ul>
    </nav>
{% endset %}
{% extends 'turbo/frame_wrapper.html.twig' %}
